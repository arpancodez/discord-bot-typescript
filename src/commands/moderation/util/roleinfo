// src/commands/util/roleinfo.ts
import { SlashCommandBuilder, EmbedBuilder } from "discord.js";

export default {
  data: new SlashCommandBuilder()
    .setName("roleinfo")
    .setDescription("Show info about a role")
    .addRoleOption(opt =>
      opt.setName("role").setDescription("Role to get info on").setRequired(true)
    ),
  async execute(interaction: any) {
    const role = interaction.options.getRole("role");
    const embed = new EmbedBuilder()
      .setTitle(`Role: ${role.name}`)
      .addFields(
        { name: "ID", value: role.id },
        { name: "Color", value: role.hexColor },
        { name: "Members", value: `${role.members.size}` },
        { name: "Mentionable", value: role.mentionable ? "Yes" : "No" }
      )
      .setColor(role.color || "Grey");
    interaction.reply({ embeds: [embed] });
  },
};
